{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "dist", "src/**/*.test.ts", "src/**/*.test.tsx", "examples", "rollup.config.js"]
}
